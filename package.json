    "clean-all": "rm -rf node_modules **/node_modules .turbo **/.turbo pnpm-lock.yaml"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "typescript": "5.7.3",
    "turbo": "^2.4.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
